<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
                  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                  xmlns:contentPages="clr-namespace:NFTB.Mobile.UI.Pages"
                  x:Class="NFTB.Mobile.UI.Navigation.MasterMenu"
                  Title="Menu">
  <MasterDetailPage.Master>
    <ContentPage Title="Menu">
      <StackLayout Orientation="Vertical" BackgroundColor="{StaticResource main-color}" Padding="10,50,10,50">
            <Label Style="{StaticResource page-title}" > FOR THE BOYS</Label>  
                <Button BackgroundColor="{StaticResource main-color-offset}"  Text ="Terms" TextColor="{StaticResource main-color}" Command="{Binding OnTermList}"/>
                <Button BackgroundColor="{StaticResource main-color-offset}" Text ="Players" TextColor="{StaticResource main-color}" Command="{Binding OnPlayerList}"/>
                <Button BackgroundColor="{StaticResource main-color-offset}" Text ="Attendance" TextColor="{StaticResource main-color}" Command="{Binding OnAttendanceList}"/>
          <Label Text="{Binding Test}"></Label>

            </StackLayout>
    </ContentPage>
  </MasterDetailPage.Master>
    <MasterDetailPage.Detail>

    </MasterDetailPage.Detail>
</MasterDetailPage>