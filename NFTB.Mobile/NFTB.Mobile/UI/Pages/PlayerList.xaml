<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NFTB.Mobile.UI.Pages.PlayerList">
  <StackLayout>
    <Label Text="I'm working"></Label>
    <Label Text="{Binding Test}"></Label>
    <Button Text="Change" Command="{Binding OnChange}"/>
    <ListView ItemsSource="{Binding PlayerList}">
      <ListView.ItemTemplate>
        <DataTemplate>
          <TextCell Text="{Binding FirstName}"></TextCell>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
    <Button Text="Pop" Command="{Binding OnPop}" Style="{StaticResource buttonStyle}"/>
  </StackLayout>
</ContentPage>